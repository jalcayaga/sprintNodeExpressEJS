<div class="container p-4">
    <div class="row">
        <% resultados.forEach(function(resultado) { %>
          <div class="col-md-4 mb-4">
            <div class="card bg-dark">
              <div class="card-header text-success d-flex justify-content-between align-items-center">
                <h4><%= resultado.piloto %></h4> 
                  <a href="/borrar/<%= resultado.id %>" class="btn btn-danger btn-sm">
                    Borrar
                  </a>
              </div>
              <!-- <img class="card-img-top" src="<%= resultado.image %>"> -->
              <div class="card-body text-light">
               <h6> Minutos: <span><%= resultado.minutos %></span></h6> 
              </div>
              <div class="card-body text-light">
                <h6> Posicion: <span><%= resultado.posicion %></span></h6> 
              </div>
              <div class="card-body text-light">
                <h6> Abandono: <span><%= resultado.abandono %></span></h6> 
              </div>
            </div>
          </div>
          <%})%>
    </div>
</div>